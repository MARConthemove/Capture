<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">


  <div class="page-title">

    <% if current_page?(sources_path) %>
      <%= cl_image_tag('brush-stroke-banner-1-onlygfx-dot-com_wetwbe', width: "120%;", height: "90px;", class: "title-brush-small") %>
      <h1>Home</h1>
    <% elsif @folder_page %>

        <% if @folder.folder_name.length < 15 %>
        <%= cl_image_tag('brush-stroke-banner-1-onlygfx-dot-com_wetwbe', width: "120%;", height: "90px;", class: "title-brush-small") %>
        <h1> <%= @folder.folder_name %> </h1>
        <% else %>
        <%= cl_image_tag('brush-stroke-banner-1-onlygfx-dot-com_wetwbe', width: "120%;", height: "90px;" ,class: "title-brush-big") %>
        <h1> <%= @folder.folder_name %> </h1>

        <% end %>

        <% elsif current_page?(new_quote_path) %>
          <%= cl_image_tag('brush-stroke-banner-1-onlygfx-dot-com_wetwbe', width: "120%;", height: "90px;" ,class: "title-brush-big") %>
          <h1>Create a new Quote</h1>

          <% elsif current_page?(new_source_path) %>
            <%= cl_image_tag('brush-stroke-banner-1-onlygfx-dot-com_wetwbe', width: "120%;", height: "90px;" ,class: "title-brush-big") %>
            <h1>Create a new Source</h1>

        <% elsif current_page?(new_folder_path) %>
          <%= cl_image_tag('brush-stroke-banner-1-onlygfx-dot-com_wetwbe', width: "120%;", height: "90px;" ,class: "title-brush-big") %>
          <h1>Create a new Folder</h1>

        <% else %>
        <h1>Capture</h1>
    <% end %>

  </div>

  <!-- if it's a folder show page, do @folder.folder_name, if its the home page put home, if its notification put notifications ... there is only about 4 - 5 situations -->

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">

      <li class="d-flex nav-item dropdown align-items-center">
          <% if current_user.photo.attached? %>
            <%= cl_image_tag current_user.photo.key, class: "avatar dropdown-toggle",
             id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
            <% else %>
              <%= cl_image_tag "b08hxPY_jhyrxg", class: "avatar dropdown-toggle",
             id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
            <% end %>
          <p class="username"> <%= current_user.username %> <i class="fas fa-caret-down"></i> </p>

        <div class="dropdown-menu dropdown-menu-left" aria-labelledby="navbarDropdown">
          <%= link_to "Profile", "#", class: "dropdown-item" %>
          <%= link_to "Friends", "#", class: "dropdown-item" %>
          <%= link_to "Settings", edit_user_registration_path, class: "dropdown-item"%>
          <%= link_to "Log out", "#", class: "dropdown-item"%>
        </div>
      </li>

    </ul>
  </div>
</div>
