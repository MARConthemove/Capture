<br>
<div class="friends-activity-title">
  <h2 class="text-center subheading"><span class="underline--magical">Friend Activity</span></h2>
</div>

<div class="all-friends-cards">

<% @quotes = policy_scope(Quote).where(user: current_user.following) %>
<% @quotes.order(created_at: :desc).each do |quote| %>
  <ul class="friend-quote-list">
    <div class="friend-quote-card">
      <div class="d-flex justify-content-between">

        <div class="d-flex align-items-center p-2">
          <div>
            <% if quote.user.photo.attached? %>
              <%= cl_image_tag quote.user.photo.key, class: "avatar" %>
            <% else %>
              <%= cl_image_tag "b08hxPY_jhyrxg", class: "avatar" %>
            <% end %>
          </div>
          <div class="ml-2 white-text-friend-card">
            <%= quote.user.username %>
          </div>
        </div>

          <div class="m-2 white-text-friend-card">
            <p> <%= time_ago_in_words(quote.created_at).gsub('about','') %> </p>
          </div>

      </div>

        <div class="flex-div-quote-and-content-friend-feed quote-javascript white-text-friend-card">
          <i class="fas fa-quote-right"></i>

          <div class="quote-content quote-friend-feed-card quote-overflow-source-card white-text-friend-card">
            <li><%= quote.content %></li>

          </div>
        </div>
        <div class="d-flex">
  <!--         <%= link_to "#" do   %>
          <p class="interesting-bulb white-text-friend-card"><i class="far fa-lightbulb"></i></p>
          <% end %>

          <%= link_to "#" do   %>
          <p class="interesting-bulb white-text-friend-card"><i class="fas fa-lightbulb"></i></p>
          <% end %> -->

          <%= link_to "#quote-#{quote.id}", data: {toggle: "collapse"} do   %>
            <p class="comment-icon white-text-friend-card"><i class="far fa-comment"></i> <%= quote.comments.count %></p>
          <% end %>

          <p class="share-icon white-text-friend-card"><i class="fas fa-share-square"></i></p>
        </div>

          <% @comment = Comment.new %>
          <div id="quote-<%= quote.id%>" class="collapse" >
            <%= form_tag quote_create_comment_index_path(quote), method: :post do %>
              <%= text_field_tag :content, params[:content], placeholder: "Say something", class: "comment-input-field" %>
            <% end %>
          </div>


    </div>
  </ul>

<% end %>
</div>

