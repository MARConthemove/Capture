<ul class="navbar-nav mr-auto user-profile-dropdown">
  <li class="d-flex nav-item dropdown align-items-center">
      <% if current_user.photo.attached? %>
          <%= cl_image_tag current_user.photo.key, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
      <% else %>
          <%= cl_image_tag "b08hxPY_jhyrxg", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
      <% end %>
      <p class="username"> <%= current_user.username %> <i class="fas fa-caret-down"></i> </p>

    <div class="dropdown-menu dropdown-menu-left" aria-labelledby="navbarDropdown">
      <%= link_to "Profile", user_profile_overview_path(current_user), class: "dropdown-item" %>
      <%= link_to "Friends", "#", class: "dropdown-item" %>
      <%= link_to "Settings", edit_user_registration_path, class: "dropdown-item"%>
      <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item"%>
    </div>
  </li>
</ul>

<br>
<br>

<div class="friends-activity-title">
  <h2 class="text-center subheading"><span class="underline--magical">Friend Activity</span></h2>
</div>

<div class="all-source-cards">

<% @sources = policy_scope(Source).where(user: current_user.following) %>
<% @sources.order(created_at: :desc).each do |source| %>
<%= link_to source_path(source), class: "friend-card-hover friend-card" do  %>
  <ul class="friend-source-list">
    <div class="friend-source-card">
      <div class="d-flex justify-content-between">

        <div class="d-flex align-items-center mt-2 ml-2  avatar-and-username">
          <div>
            <% if source.user.photo.attached? %>
              <%= cl_image_tag source.user.photo.key, class: "avatar-small" %>
            <% else %>
              <%= cl_image_tag "b08hxPY_jhyrxg", class: "avatar-small" %>
            <% end %>
          </div>
          <div class="ml-2 white-text-friend-card friend-username-feed">
            <%= source.user.username %>
          </div>
        </div>

          <div class="m-2 white-text-friend-card time-friends-card">
            <p> <%= time_ago_in_words(source.created_at).gsub('about','').gsub('less than', '').gsub(' a ', '1 ') %> </p>
          </div>

      </div>


          <div class="quote-content title-friend-feed-card white-text-friend-card">
            <li class="title-source-friends"><%= source.title %></li>

          </div>
        </div>
  </ul>
  <% end %>

<% end %>
</div>

