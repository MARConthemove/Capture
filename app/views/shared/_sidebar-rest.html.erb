<%= cl_image_tag("pngtree-camera-hand--logo-template-with-line-art-style-image_128418_hdebp6",
      width: 110, height: 110, crop: :fit, class: "logo-sidebar") %>

<div class="div-main-links-sidebar">
    <ul class="nav-bar-links">
      <%= link_to sources_path, class: "nav-bar-links" do  %>
      <% if current_page?(sources_path) %>
      <li class="POS-ABS"><i class="fas fa-caret-right"></i></li>
      <% end %>
      <li><i class="fas fa-home"></i></li>
      <li class="home-btn-navbar"><strong>Home</strong></li>
      <% end %>
    </ul>

    <ul class="nav-bar-links">
      <li> <i class="fas fa-bell"></i></li>
      <li class=""><strong>Notifications</strong></li>
    </ul>

    <ul class="nav-bar-links">
      <li> <i class="fas fa-search"></i></li>
      <li class=""><strong>Search</strong></li>
    </ul>
</div>

<div class="all-folders-in-sidebar">
  <%= link_to new_folder_path, class: "plus-add-folder" do %>
  <div class="d-flex align-items-center">
    <p><i class="fas fa-folder-plus"></i></p>
    <p class="add-folder-text">Add a new Folder</p>
  </div>
  <% end %>

  <ul>
  <% folders.each do |folder| %>
    <%= link_to folder_path(folder), class: "folder-link ul-text-decoration" do %>
      <div class="div-folder-in-sidebar <%= "active" if current_page?(folder_path(folder)) %>">
    <% if current_page?(folder_path(folder)) %>
    <li class="POS-ABS"><i class="fas fa-caret-right"></i></li>
    <% end %>
        <li class="folder-in-sidebar"> <i class="fa fa-archive"></i> <%= folder.folder_name %></li>
      </div>
    <% end %>


  <% end %>
  </ul>

</div>


