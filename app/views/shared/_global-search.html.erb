
<div class="global-search-field-div">
  <p class="search-icon-global-search"><i class="fas fa-search"></i></p>
  <%= form_tag search_path, method: :get do %>
    <%= text_field_tag :query, params[:query], onfocus: " let value = this.value; this.value = null; this.value=value", class: "global-search-form", placeholder: "Search Capture" %>
  <% end %>
</div>
