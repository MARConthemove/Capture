<div class="all-sources-home folder-show">
  <% @sources.each do |source| %>

  <div class="source-card">
    <%= link_to "#source-#{source.id}", data: {toggle: "collapse"}, class: "source-collapse-link" do %>
      <ul class="source-list-top-div">

        <div class="flex-div-favicon-and-title">
          <div class="d-flex">
            <% if source.photo.attached? %>
            <%= cl_image_tag source.photo.key,
              width: 60, height: 60, class: "favicon-source-card" %>
            <% else %>
              <%= cl_image_tag("cropped-globe-favicon_dsbdl6",
                width: 60, height: 60, class: "favicon-source-card") %>
            <% end %>
            <div>
              <li class="source-card-title"> <strong> <%= source.title %> </strong></li>
            </div>
          </div>
          <div class="time-since-save-source-card">
            <p> <%= time_ago_in_words(source.created_at).gsub('about','') %> ago</p>
          </div>
        </div>

      </ul>
    <% end %>

    <ul class="source-list-quotes collapse" id="source-<%= source.id%>">
      <% source.quotes.each do |quote| %>

      <div class="flex-div-quote-and-content quote-javascript">
        <i class="fas fa-quote-right"></i>

        <div class="quote-content quote-source-card quote-overflow-source-card">
          <li><%= quote.content %></li>

        </div>
      </div>

      <% end %>
    </ul>



    <h1 class="delete-and-move-dropdown" id="navbarDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><i class="fas fa-ellipsis-h"></i></h1>
    <div class="dropdown-menu dropdown-menu-left" aria-labelledby="navbarDropdown">
      <button type="button" class="dropdown-item" data-toggle="modal" data-target=".bd-example-modal-sm">Change Folder</button>
      <%= link_to "Delete", source_path(source), method: :delete, data: { confirm: "Are you sure?" }, class: "dropdown-item" %>
    </div>

<!--     <%= link_to source_path(source), method: :delete, data: { confirm: "Are you sure?" }, class: "delete-source-card" do   %>
      <p><i class="fas fa-trash-alt"></i></p>
    <% end %>

    <%= link_to edit_source_path(source), class: "move-link" do %>
    <p><i class="fas fa-folder"></i></p>
    <% end %> -->

    <div class="modal fade bd-example-modal-sm" id="move-folder" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel">
      <div class="modal-dialog modal-lg">
        <div class="modal-content">
          <%= simple_form_for(source) do |f| %>
          <%= f.input :folder_id, collection: Folder.where(user_id: current_user.id), label_method: :folder_name, value_method: :id, label: "Folder name", id: "move-folder-form", include_blank: false %>
          <%= f.submit %>
          <% end %>
        </div>
      </div>
    </div>


<div class="d-flex-bottom-of-source-card">

      <div>
        <p class="date_of_article"> <%= source.date_of_article %></p> <!-- strftime("%d. %b %Y") -->
      </div>

      <div class="d-flex">
        <%= link_to "#", class: "show-locally-link", target: :_blank do   %>
          <p class="source-icons-bottom-right"><i class="fas fa-newspaper"></i></p>
        <% end %>

        <%= link_to "#{source.url_of_website}", class: "show-on-website-link", target: :_blank do %>
          <p class="source-icons-bottom-right"><i class="fas fa-link"></i></p>
        <% end %>

        <%= link_to source_path(source), class: "show-on-website-link", target: :_blank do %>
            <p class="source-icons-bottom-right"><i class="fab fa-cuttlefish"></i></p>
        <% end %>
      </div>

    </div>

  </div>
    <% end %>

</div>
