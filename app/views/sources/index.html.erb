<h1>Home</h1>

<%= form_tag sources_path, method: :get do %>
  <%= text_field_tag :query,
    params[:query],
    class: "form-control"
  %>
  <%= submit_tag "Search", class: "btn btn-primary" %>
<% end %>

<% @sources.each do |source| %>
<%= link_to "Destroy", source_path(source), method: :delete, data: { confirm: "Are you sure?" }  %>
<ul>
  <li> <%= source.title %> ----- <%= source.user.first_name %></li>
  <% source.quotes.each do |quote| %>
  <li><%= quote.content %></li>
  <% end %>
</ul>
  <% end %>



<%= link_to "Create a new quote", new_quote_path %>


